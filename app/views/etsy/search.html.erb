<!doctype html>
<html>

    <head>
         <title>Etsy Searcher</title>
    </head>

    <body>
        <header>
            <div class="leftside">
              <h1>
                <a hef="#"><img src="https://www.etsy.com/assets/dist/images/etsylogo.20150106184300.png"/a>
              </h1>
              <div class="search-bar">
                  <form>
                      <input type="text" class="search-input" placeholder ="Search for items or shops">
                      <button class="search-button">Search</button>
                      <button class="browse-button">Browse</button>
                  </form>
              </div>
            </div>
            <div class="rightside">
                <ul>
                    <li class="help"><a href="#">Help</a></li>
                    <li><a href="#">Register</a></li>
                    <li><a href="#">Sign In</a></li>
                    <li><a href="#">Cart</a></li>
                </ul>
            </div>
        </header>
        <div class="sidebar">
        <p class="returned">Show Results For:</p>
          <h3>Item Type</h3>
          <div class="whiskey">
          <li><a href="#">All Items</a></li>
          <li><a href="#">Handmade</a></li>
          <li><a href="#">Vintage</a></li>
          <li><a href="#">Craft Supplies</a></li>
        </div>

        <h3>Categories</h3>
        <div class="handmade-list">
            <li><a href="#">Handmade</a></li>
            <li><a href="#">Glass</a></li>
            <li><a href="#">Weddings</a></li>
            <li><a href="#">Housewares</a></li>
            <li><a href="#">Accessories</a></li>
            <li><a href="#">Art</a></li>
            <li><a href="#">Jewelry</a></li>
            <li><a href="#">Ceremaics and Pottery</a></li>
            <li><a href="#">Clothing</a></li>
        </div>
        <div class="vintage-list">
            <li><a href="#">Collectibles</a></li>
            <li><a href="#">Serving</a></li>
            <li><a href="#">Housewares</a></li>
            <li><a href="#">Antique</a></li>
        </div>
        <div class="craft-supplies-list">
            <li><a href="#">Bead</a></li>
            <li><a href="#">Commercial</a></li>
            <li><a href="#">Scrapbooking</a></li>
            <li><a href="#">Fabric</a></li>
        </div>
        <div class="search-results"
            <% @results.each do |x| %>
                <div class="results-box">
                    <%= link_to x["url"] do %>
                      <%= image_tag x["Images"][0]['url_170x135'], size: "214x170" %>
                    <% end %>
                    <div class="result-details">
                        <div class="item-title">
                            <%= x['title'][0, 32] %>
                        </div>
                        <div class="details">
                            <div class="shop-name">
                              <%= "#{x['Shop']['shop-name']}" %>
                            </div>
                            <div class="price">
                              <%= "$#{x['price']} USD" %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </body>


 </html>
